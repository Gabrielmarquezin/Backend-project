<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/formulario/update/update.css">
    <link rel="stylesheet" href="../styles/formulario/update/responsiv.css">
    <title>Document</title>
</head>
<body>
    
    <div class="master" id="master">
        
        <div class="front-form" id="front-form">
            <form action="https://backend-project-dusky.vercel.app/pages/atualizar" method="post" class="form-conteiner" id="form-conteiner">
                <div class="group-input">
                    <div class="input-box">
                        <input type="text" name="marcaf" id="marcaf" required>
                        <label for="marca">MARCA</label>
                    </div>
        
                    <div class="input-box">
                        <input type="text" name="tipof" id="tipof" required>
                        <label for="tipo">TIPO</label>
                    </div>
                    
                    <div class="input-box">
                        <input type="text" name="classificacaof" id="classificacaof" list="class" required>
                        <label for="classificacao">CLASSIFICAÇÃO</label>
                        <datalist id="class">
                            <%classificacoes.forEach(clas => {%>
                                <option value='<%= clas%>'><%= clas%></option>
                            <%})%>
                        </datalist>
                    </div>
        
                    <div class="input-box">
                        <input type="text" name="estadof" id="estadof" list="estad" required>
                        <label for="estado">ESTADO</label>
                        <datalist id="estad">
                            <%estados.forEach(estado => {%>
                                <option value='<%= estado %>'><%= estado%></option>
                            <%})%>
                        </datalist>
                    </div>
        
                    <div class="input-box">
                        <input type="number" name="tamanhof" id="tamanhof" required>
                        <label for="tamanho">TAMANHO</label>
                    </div>

                    <div class="input-box">
                        <select id="select-marketf" name="marketf">
                            <option value="mercado">MERCADO</option>
                            <option value="biga">biga</option>
                            <option value="deirton">deirton</option>
                            <option value="francisco">francisco</option>
                        </select>
                    </div>

                </div>

                <input type="text" class="next" id="next" name="next" value="next" style="display: none;">

                <div class="btn">
                    <button type="button" onclick="window.location.href ='https://backend-project-dusky.vercel.app'">VOLTAR</button>
                    <button type="submit" id="btn">PROXIMO</button>
                </div>
            </form>
        </div>

        <div class="codition-to-flip" id="condition" style="display: none;"><%= empty %></div>

        <div class="back-form back-form-none" id="back-form">
            <form action="https://backend-project-dusky.vercel.app/pages/atualizar" class="form" method="post" id="form-back">
                <div class="form-index">
                    <div class="input-groups">
                        <input type="text" name="tipo" id="tipo" list="tipos" required>
                        <label for="tipo">TIPO</label>
                        <datalist id="tipos">
                            <%categorias.forEach(tipo => {%>
                                <option value='<%= tipo.cat %>'><%= tipo.cat%></option>
                            <%})%>
                        </datalist>
                    </div>
        
                    <div class="input-groups">
                        <input type="text" name="marca" id="marca" required>
                        <label for="marca">MARCA</span>
                    </div>
        
                    <div class="input-groups">
                        <input type="text" name="estado" id="estado" list="estad" required>
                        <label for="estado">ESTADO</label>
                        <datalist id="estad">
                            <%estados.forEach(estado => {%>
                                <option value='<%= estado %>'><%= estado%></option>
                            <%})%>
                        </datalist>
                    </div>
        
                    <div class="input-groups">
                        <input type="text" name="classificacao" id="classificacao" list="class" required>
                        <label for="classificacao">CLASSIFICAÇÃO</label>
                        <datalist id="class">
                            <%classificacoes.forEach(clas => {%>
                                <option value='<%= clas%>'><%= clas%></option>
                            <%})%>
                        </datalist>
                    </div>
        
                    <div class="input-groups">
                        <input type="number" name="tamanho" id="tamanho" required>
                        <label for="tamanho">TAMANHO</label>
                    </div>
        
                    <div class="input-desc">
                        <label for="descricao">DESCRIÇÃO</label>
                        <textarea name="descricao" id="descricao" rows="4"></textarea>
                    </div>

                    <div class="img">
                        <span>IMAGEM</span>
                        <label for="img"><span class="imagem-select" id="img-select"></span></label>
                        <input type="file" id="img" placeholder="Esolha uma imagem">
                        <input type="url" name="img" style="display: none;" id="url">
                    </div> 

                </div>

                <input type="text" id="markets" class="markets" name="mercado" style="display: none;" value="<%= mercado %>">
                <input type="text" class="idDoc" id="idDoc" name="idDoc" value="<%= idDoc %>" style="display: none;">

                <div class="button">
                    <button type="button" id="voltar">VOLTAR</button>
                    <button type="submit" id="enviar">ENVIAR </button>
                </div>
            </form>
        </div>

    </div>
    
    <div class="resposta"></div>

    <script type="module" src="../src/stored/config.js"></script>
    <script type="module" src="../src/formulario/flip.js"></script>
    <script type="module" src="../src/formulario/fileRead.js"></script>
    <script type="module" src="../src/formulario/update/update.js"></script>
</body>
</html>