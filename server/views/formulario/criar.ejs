<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/formulario/create/add.css">
    <link rel="stylesheet" href="../styles/formulario/create/responsiv.css">
    <title>criar</title>
</head>
<body>
    <div class="conteiner">
        <form action=" https://backend-project-git-master-gabrielmarquezin.vercel.app/pages/criar" method="post" class="form" >
            <div class="form-index">
                <div class="input-group">
                    <input type="text" name="tipo" id="tipo" list="tipos" required>
                    <label for="tipo">TIPO</label>
                    <datalist id="tipos">
                        <%categorias.forEach(tipo => {%>
                            <option value='<%= tipo.cat %>'><%= tipo.cat%></option>
                        <%})%>
                    </datalist>
                </div>
    
                <div class="input-group">
                    <input type="text" name="marca" id="marca" required>
                    <label for="marca">MARCA</span>
                </div>
    
                <div class="input-group">
                    <input type="text" name="estado" id="estado" list="estad" required>
                    <label for="estado">ESTADO</label>
                    <datalist id="estad">
                        <%estados.forEach(estado => {%>
                            <option value='<%= estado %>'><%= estado%></option>
                        <%})%>
                    </datalist>
                </div>
    
                <div class="input-group">
                    <input type="text" name="classificacao" id="classificacao" list="class" required>
                    <label for="classificacao">CLASSIFICAÇÃO</label>
                    <datalist id="class">
                        <%classificacoes.forEach(clas => {%>
                            <option value='<%= clas%>'><%= clas%></option>
                        <%})%>
                    </datalist>
                </div>
    
                <div class="input-group">
                    <input type="number" name="preco" id="preco" required>
                    <label for="preco">PREÇO</label>
                </div>
    
                <div class="input-group">
                    <input type="number" name="tamanho" id="tamanho" required>
                    <label for="tamanho">TAMANHO</label>
                </div>
    
                <div class="input-desc">
                    <label for="descricao">DESCRIÇÃO</label>
                    <textarea name="descricao" id="descricao" rows="5"></textarea>
                </div>

                <div class="market">
                    <select id="select-market" name="market">
                        <option value="mercado">MERCADO</option>
                        <option value="biga">biga</option>
                        <option value="deirton">deirton</option>
                        <option value="francisco">francisco</option>
                    </select>
                </div>

                <div class="img">
                    <span>IMAGEM</span>
                    <label for="img"><span class="img-select" id="img-span"></span></label>
                    <input type="file" name="img" id="img" placeholder="Esolha uma imagem">
                    <input type="url" name="img" style="display: none;" id="url">
                </div> 

                <div class="button">
                    <button type="button" onclick="window.location.href ='https://ceara-cientifico.herokuapp.com'">VOLTAR</button>
                    <button type="submit" id="enviar">ENVIAR</button>
                </div>
            </div>
        </form>

        <div class="validation" id="validation" style="display: none;"><%= empty %></div>

    </div>
    <script type="module" src="../src/stored/config.js"></script>
    <script type="module" src="../src/formulario/createFile.js"></script>
</body>
</html>